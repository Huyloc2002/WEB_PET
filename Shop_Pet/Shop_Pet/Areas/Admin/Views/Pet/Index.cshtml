
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<hr />

<link href="
https://cdn.jsdelivr.net/npm/fontawesome-4.7@4.7.0/css/font-awesome.min.css
" rel="stylesheet">

<a class="btn btn-success pull-left" asp-action="Themmoi" asp-controller="Pet"><i class="fa fa-plus"></i>Thêm mới</a>

<form asp-action="Index" asp-controller="Pet" method="get" class="form-inline mb-3 pull-right">
    <input type="text" name="name" class="form-control mt-3" placeholder="Tìm kiếm theo tên, loài hoặc giống" required />
    <button type="submit" class="btn btn-warning ml-2" style="padding-top:-5px">Tìm Kiếm</button>
</form>

<table class="table table-bordered bg-white">
    <thead>
        <tr>
            <th>Mã Thú Cưng</th>
            <th>Tên Thú Cưng</th>
            <th>Hình ảnh</th>
            <th>Loài Thú Cưng</th>
            <th>Giống</th>
            <th>Tuổi</th>
            <th>Giá</th>
            <th>Số Lượng </th>
            <th>Chức Năng</th>
         
         
        </tr>
    </thead>
    <tbody>
        @foreach(var p in ViewBag.Pets){
            <tr>
                <td>@p.pet_id</td>
                <td>@p.name</td>
                <td>
                    <img src="~/Admin/img/@p.Images" width="60px" />
                </td>
                <td>@(p.CategoryPet != null ? p.CategoryPet.species : "Unknown")</td> <!-- Display species (Loài) -->
                <td>@p.breed</td>
                <td>@p.age</td>
                <td>@p.price</td>
                <td>@p.quantity</td>
                <td>
                    <a class="btn btn-danger" asp-action="Xoa" asp-controller="Pet" asp-route-Id="@p.pet_id"><i class="fa fa-trash"></i>Xóa</a>
                    <a class="btn btn-danger" asp-action="Sua" asp-controller="Pet" asp-route-Id="@p.pet_id"><i class="fa fa-pencil"></i>Sửa</a>
                </td>

            </tr>
        }
     
        </tbody>
        </table>

